{
  "name": "irmo",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild app=client/index.js --bundle --minify --sourcemap --outdir=dist",
    "build:dev": "esbuild app=client/index.js --bundle --outdir=dist",
    "clean": "rimraf ./dist && mkdir ./dist && touch ./dist/.gitkeep",
    "deploy": "gh-pages -d ./dist",
    "postbuild": "cp ./client/index.html ./dist",
    "postdeploy": "node -e 'const zip=require(\"zip-dir\");zip(\"./dist\", {saveTo:\"game.zip\"}).then(() => console.log(\"Done!\"));'",
    "prebuild": "npm run clean",
    "predeploy": "npm test && npm run build",
    "start": "node server/index.cjs",
    "test": "ava"
  },
  "keywords": [
    "GamedevJS"
  ],
  "author": "Andr√© Jaenisch",
  "license": "GPL-3.0+",
  "devDependencies": {
    "ava": "3.15.0",
    "esbuild": "0.11.14",
    "gh-pages": "3.1.0",
    "rimraf": "3.0.2",
    "zip-dir": "^2.0.0"
  },
  "dependencies": {
    "fastify": "^3.14.2",
    "fastify-static": "^4.0.1",
    "socket.io": "^4.0.1"
  },
  "engines": {
    "node": "15.14.0",
    "npm": "7.11.1"
  }
}
